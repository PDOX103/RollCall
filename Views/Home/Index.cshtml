@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            background-color: #3d5a80; /* Full screen green background */
            font-family: 'Poppins', sans-serif;
        }

        .form-container {
            background-color: #ffffff;
            border-radius: 15px;
            padding: 40px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
            max-width: 450px;
            width: 100%;
        }

        .hero-text {
            color: #fff;
            text-align: center;
            margin-bottom: 40px;
        }

        .btn-institute {
            background-color: #28a745;
            color: #fff;
            border: none;
        }

            .btn-institute:hover {
                background-color: #218838;
            }
    </style>
</head>
<body>
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div>
            <div class="hero-text">
                <h1>Hey! Welcome</h1>
                <p>Track the attendance with ease</p>
            </div>
           <div class="form-container mx-auto">
                <h3 class="mb-4 text-center">Contact Us</h3>
                <form>
                    <div class="mb-3">
                        <label for="name" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Enter your full name">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="email" placeholder="Enter your email">
                    </div>
                    <div class="mb-3">
                        <label for="course" class="form-label">Interested Course</label>
                        <select class="form-select" id="course">
                            <option selected>Select a course</option>
                            <option value="1">Computer Science</option>
                            <option value="2">Business Administration</option>
                            <option value="3">Electrical Engineering</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea class="form-control" id="message" rows="3" placeholder="Write your message"></textarea>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-institute btn-lg">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
