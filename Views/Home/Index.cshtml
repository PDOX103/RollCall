@{
    ViewData["Title"] = "Home";
}

<style>
    body, html {
        height: 100%;
        margin: 0;
        background: #0f0c29;
        background: -webkit-linear-gradient(to right, #24243e, #302b63, #0f0c29);
        background: linear-gradient(to right, #24243e, #302b63, #0f0c29);
        font-family: 'Poppins', sans-serif;
    }

    .image-container {
        background-color: #ffffff;
        border-radius: 15px;
        padding: 40px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        max-width: 1000px;
        width: 100%;
        text-align: center;
        margin: 20px auto 0;
    }

    .hero-text {
        color: #fff;
        text-align: center;
        margin: 20px auto;
        max-width: 1000px;
    }

    .featured-image {
        max-width: 100%;
        height: auto;
        border-radius: 10px;
    }

    .content-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-top: 20px;
    }

    /* Safety: keep dropdown above all content */
    .dropdown-menu {
        z-index: 2000 !important;
    }
</style>

<div class="content-wrapper">
    <div class="hero-text">
        <h1>Hey! Welcome</h1>
        <p>Track the attendance with ease</p>
    </div>
    <div class="image-container mx-auto">
        <img src="~/images/Classroom.png" alt="Attendance Tracking"
             class="featured-image animate__animated animate__pulse animate__infinite">
    </div>
</div>

@section Scripts {
    <!-- Animate.css -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.js"></script>
}
