@{
    ViewData["Title"] = "Contact Us";
}
<h1 style="text-align:center; color:white; margin-top:20px;">@ViewData["Title"]</h1>

<style>
    body, html {
        height: 100%;
        margin: 0;
        background: #0f0c29;
        background: -webkit-linear-gradient(to right, #24243e, #302b63, #0f0c29);
        background: linear-gradient(to right, #24243e, #302b63, #0f0c29);
        font-family: 'Poppins', sans-serif;
        color: white;
    }

    .contact-container {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        width: 80%;
        margin: 40px auto;
        padding: 20px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 15px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.4);
    }

    .contact-info {
        width: 45%;
    }

        .contact-info h2 {
            margin-bottom: 15px;
            color: #ffffff;
        }

        .contact-info p {
            margin: 10px 0;
            font-size: 14px;
        }

    .contact-form {
        width: 45%;
        background: rgba(255, 255, 255, 0.1);
        padding: 20px;
        border-radius: 10px;
    }

        .contact-form label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .contact-form input,
        .contact-form textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: none;
            border-radius: 8px;
            outline: none;
        }

        .contact-form button {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 8px;
            background: #302b63;
            color: white;
            font-size: 16px;
            cursor: pointer;
            transition: background 0.3s;
        }

            .contact-form button:hover {
                background: #5d54a4;
            }
</style>

<div class="contact-container">
    <!-- Left side (info) -->
    <div class="contact-info">
        <h2>Contact Us</h2>
        <p>Reach out to us for any queries or assistance.</p>
        <p><strong>Fahmidul Karim</strong><br>Email: fahmidul.cse.20220104103@aust.edu</p>
        <p><strong>Priyom Parial</strong><br>Email: priyom.cse.20220104085@aust.edu</p>
        

        <p><strong>Safuan Hasan</strong><br>Email: safuan.cse.20220104097@aust.edu</p>
    </div>

    <!-- Right side (form) -->
    <div class="contact-form">
        <form>
            <label for="name">Your Name</label>
            <input type="text" id="name" placeholder="Enter your name" required />

            <label for="email">Your Email</label>
            <input type="email" id="email" placeholder="Enter your email" required />

            <label for="message">Message</label>
            <textarea id="message" rows="4" placeholder="Write your message..." required></textarea>

            <button type="submit">Send Message</button>
        </form>
    </div>
</div>
