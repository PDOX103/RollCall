@model RollCall.Models.ViewModels.CourseEnrollmentsVM

@{
    ViewData["Title"] = "Course Enrollments";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    body, html {
        height: 100%;
        margin: 0;
        background: #0f0c29;
        background: -webkit-linear-gradient(to right, #24243e, #302b63, #0f0c29);
        background: linear-gradient(to right, #24243e, #302b63, #0f0c29);
        font-family: 'Poppins', sans-serif;
        color: #fff;
    }

    .container {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 1rem;
        padding: 30px;
        margin: 20px auto;
        backdrop-filter: blur(10px);
        max-width: 1200px;
    }

    .card {
        background: rgba(255, 255, 255, 0.95);
        color: #2c3e50;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .table-responsive {
        background: white;
        border-radius: 0.5rem;
        overflow: hidden;
    }

    .table th {
        background: #3a7bd5;
        color: white;
        border: none;
    }

    .table td {
        vertical-align: middle;
    }

    .badge-enrollment {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-weight: bold;
    }

    .empty-state {
        text-align: center;
        padding: 40px;
        color: #2c3e50;
    }
</style>

<div class="container">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>@Model.CourseName - Enrolled Students</h2>
            <p class="text-light mb-0">Course Code: <span class="badge-enrollment">@Model.CourseCode</span></p>
        </div>
        <div>
            <a asp-controller="User" asp-action="MyCourses" class="btn btn-outline-light">
                <i class="fas fa-arrow-left"></i> Back to My Courses
            </a>
        </div>
    </div>

    <!-- Enrollment Stats -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row text-center">
                <div class="col-md-4">
                    <h3 class="text-primary">@Model.EnrolledStudents.Count</h3>
                    <p class="text-muted mb-0">Total Students</p>
                </div>
                <div class="col-md-4">
                    <h3 class="text-success">@Model.EnrolledStudents.Count(s => !string.IsNullOrEmpty(s.PhoneNumber) && s.PhoneNumber != "N/A")</h3>
                    <p class="text-muted mb-0">With Phone Numbers</p>
                </div>
                <div class="col-md-4">
                    <h3 class="text-info">@Model.EnrolledStudents.Count(s => !string.IsNullOrEmpty(s.Section) && s.Section != "N/A")</h3>
                    <p class="text-muted mb-0">With Section Info</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Students Table -->
    <div class="card">
        <div class="card-body">
            @if (Model.EnrolledStudents.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Student ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Section</th>
                                <th>Department</th>
                                <th>Enrolled On</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in Model.EnrolledStudents)
                            {
                                <tr>
                                    <td><strong>@student.StudentIdNumber</strong></td>
                                    <td>@student.Name</td>
                                    <td>@student.Email</td>
                                    <td>@student.PhoneNumber</td>
                                    <td>@student.Section</td>
                                    <td>@student.Department</td>
                                    <td>@student.EnrolledAt.ToString("MMM dd, yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-users-slash fa-3x mb-3 text-muted"></i>
                    <h4>No students enrolled yet</h4>
                    <p class="text-muted">Students can enroll using the course code: <strong>@Model.CourseCode</strong></p>
                    <div class="mt-3">
                        <button class="btn btn-primary" onclick="copyToClipboard('@Model.CourseCode')">
                            <i class="fas fa-copy"></i> Copy Enrollment Code
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                // Show feedback
                const originalText = event.target.innerHTML;
                event.target.innerHTML = '<i class="fas fa-check"></i> Copied!';
                event.target.classList.remove('btn-primary');
                event.target.classList.add('btn-success');

                // Revert after 2 seconds
                setTimeout(() => {
                    event.target.innerHTML = originalText;
                    event.target.classList.remove('btn-success');
                    event.target.classList.add('btn-primary');
                }, 2000);
            }).catch(function(err) {
                alert('Failed to copy: ' + err);
            });
        }
    </script>
}