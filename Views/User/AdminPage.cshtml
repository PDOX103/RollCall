@model RollCall.Models.User
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <h2>Welcome, Admin @Model.Name!</h2>
    <p>You are logged in as <strong>Administrator</strong>.</p>

    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Admin Controls</h5>
            <ul>
                <li><a asp-controller="User" asp-action="ManageUsers">Manage Users</a></li>
                <li><a asp-controller="User" asp-action="Reports">View Reports</a></li>
                <li><a asp-controller="User" asp-action="Settings">System Settings</a></li>
            </ul>
        </div>
    </div>
</div>
