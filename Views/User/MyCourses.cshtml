@model List<RollCall.Models.Course>

@{
    ViewData["Title"] = "My Courses";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    body, html {
        height: 100%;
        margin: 0;
        background: #0f0c29;
        background: -webkit-linear-gradient(to right, #24243e, #302b63, #0f0c29);
        background: linear-gradient(to right, #24243e, #302b63, #0f0c29);
        font-family: 'Poppins', sans-serif;
        color: #fff;
    }

    .container {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 1rem;
        padding: 20px;
        margin: 15px auto;
        backdrop-filter: blur(10px);
        max-width: 1000px;
    }

    .course-card {
        background: rgba(255, 255, 255, 0.95);
        color: #2c3e50;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 12px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .course-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 12px;
        flex-wrap: wrap;
        gap: 6px;
    }

    .course-code {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 3px 12px;
        border-radius: 20px;
        font-weight: bold;
        font-size: 0.8em;
    }

    /* ===== BUTTON STYLES ===== */
    .action-buttons {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        justify-content: flex-end;
    }

    .btn-grad, .btn-grad2, .btn-grad4 {
        border: none;
        padding: 5px 10px;
        font-size: 0.78rem;
        font-weight: 500;
        border-radius: 20px;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        transition: all 0.2s ease-in-out;
        text-decoration: none;
        white-space: nowrap;
        background-size: 200% auto;
        cursor: pointer;
        line-height: 1.2;
    }

    .btn-grad3 {
        border: none;
        padding: 10px 10px;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 20px;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        transition: all 0.2s ease-in-out;
        text-decoration: none;
        white-space: nowrap;
        background-size: 200% auto;
        cursor: pointer;
        line-height: 1.2;
    }

    .btn-grad {
        background-image: linear-gradient(to right, #232526 0%, #414345 51%, #232526 100%);
        color: white;
    }

        .btn-grad:hover {
            background-position: right center;
            transform: translateY(-2px);
        }

    .btn-grad2 {
        background-image: linear-gradient(to right,#F00000 0%, #DC281E 51%, #F00000 100%);
        color: white;
    }

        .btn-grad2:hover {
            background-position: right center;
            transform: translateY(-2px);
        }

    .btn-grad3 {
        background-image: linear-gradient(to right, #00c6ff 0%, #0072ff 51%, #00c6ff 100%);
        color: black;
    }

        .btn-grad3:hover {
            background-position: right center;
            transform: translateY(-2px);
        }

    .btn-grad4 {
        background-image: linear-gradient(to right, #ffb347 0%, #ffcc33 51%, #ffb347 100%);
        color: black;
    }

        .btn-grad4:hover {
            background-position: right center;
            transform: translateY(-2px);
        }

    /* ===== MOBILE OPTIMIZATION ===== */
    @@media (max-width: 576px) {
        .action-buttons {
            justify-content: center;
        }

        .btn-grad, .btn-grad2 {
            flex: 1 1 auto;
            text-align: center;
            font-size: 0.8rem;
            padding: 6px 8px;
        }

        .course-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .course-code {
            align-self: flex-start;
        }
    }

    .empty-state {
        text-align: center;
        padding: 30px;
        color: #ecf0f1;
    }

    /* Professional pagination hover effects */
    .pagination .page-link {
        transition: all 0.2s ease-in-out;
        border: none;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

        .pagination .page-link:hover {
            transform: translateY(-2px);
            background-color: black !important;
            color: #fff !important;
        }

    .pagination .active .page-link {
        font-weight: 600;
        background-color: black !important;
        color: #fff !important;
        box-shadow: 0 2px 8px rgba(0,0,0,0.2);
    }

    .pagination .disabled .page-link {
        opacity: 0.6;
        cursor: not-allowed;
    }
</style>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <h2>My Created Courses</h2>
        <div class="d-flex gap-2 flex-wrap">
            <a asp-action="CreateCourse" class="btn-grad3 mt-2 mt-sm-0">
                <i class="fas fa-plus"></i> Create New Course
            </a>

            <a asp-action="EndCourses" class="btn-grad3 mt-2 mt-sm-0">
                <i class="fas fa-eye"></i> View Ended Courses
            </a>
        </div>
    </div>

    @if (Model.Any(c => c.IsActive))
    {
        @foreach (var course in Model)
        {
            <div class="course-card">
                <div class="course-header">
                    <h4 class="mb-0">@course.Name</h4>
                    <span class="course-code" id="code-@course.Id">@course.Code</span>
                </div>

                <div class="action-buttons">
                    <button class="btn-grad2" onclick="copyCode('@course.Code', '@course.Id')">
                        <i class="fas fa-copy"></i> Copy Code
                    </button>

                    <a asp-controller="User" asp-action="CourseEnrollments" asp-route-courseId="@course.Id"
                       class="btn-grad">
                        <i class="fas fa-users"></i> View Enrollments
                    </a>

                    <a asp-controller="User" asp-action="StartSession" asp-route-courseId="@course.Id"
                       class="btn-grad">
                        <i class="fas fa-clock"></i> Create Session
                    </a>

                    <a asp-controller="User" asp-action="CourseSessions" asp-route-courseId="@course.Id"
                       class="btn-grad">
                        <i class="fas fa-list"></i> View Sessions
                    </a>

                    <form asp-controller="User" asp-action="EndCourse" asp-route-id="@course.Id" method="post" class="d-inline">
                        <button type="submit" class="btn-grad4"
                                onclick="return confirm('Are you sure you want to end this course?');">
                            <i class="fa fa-stop"></i> End Course
                        </button>
                    </form>
                </div>
            </div>
        }

        <!-- ===== PAGINATION ===== -->
        <div class="d-flex justify-content-center mt-4">
            @if (ViewBag.TotalPages > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <!-- Previous button -->
                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link rounded-pill px-3"
                               asp-action="MyCourses"
                               asp-route-page="@(ViewBag.CurrentPage - 1)">
                                <i class="fas fa-chevron-left"></i> Previous
                            </a>
                        </li>

                        <!-- Page numbers -->
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                                <a class="page-link rounded-circle mx-1 px-3 py-1
                                              @(ViewBag.CurrentPage == i ? "bg-primary text-white" : "bg-light text-dark")"
                                   asp-action="MyCourses"
                                   asp-route-page="@i">
                                    @i
                                </a>
                            </li>
                        }

                        <!-- Next button -->
                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                            <a class="page-link rounded-pill px-3"
                               asp-action="MyCourses"
                               asp-route-page="@(ViewBag.CurrentPage + 1)">
                                Next <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="fas fa-book-open fa-3x mb-3"></i>
            <h4>No courses created yet</h4>
            <p>Create your first course to generate an enrollment code for students.</p>
            <a asp-action="CreateCourse" class="btn-grad btn-lg">
                <i class="fas fa-plus"></i> Create Your First Course
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        function copyCode(code, courseId) {
            navigator.clipboard.writeText(code).then(function () {
                const button = document.querySelector(`button[onclick="copyCode('${code}', '${courseId}')"]`);
                const originalText = button.innerHTML;
                const originalBg = button.style.backgroundImage;

                button.innerHTML = '<i class="fas fa-check"></i> Copied!';
                button.style.backgroundImage = "linear-gradient(135deg, #28a745, #28a745)";

                setTimeout(() => {
                    button.innerHTML = originalText;
                    button.style.backgroundImage = originalBg;
                }, 2000);
            }).catch(function (err) {
                alert('Failed to copy code: ' + err);
            });
        }
    </script>
}
