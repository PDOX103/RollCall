@model List<RollCall.Models.AttendanceSession>
@{
    ViewData["Title"] = "Active Sessions";
}
<div class="container">
    <h2>Active Attendance Sessions</h2>
    @if (Model.Any())
    {
        foreach (var session in Model)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">@session.Course.Name</h5>
                            <p class="card-text">
                                Started: @session.StartTime.ToString("g")
                            </p>
                        </div>
                        <form asp-action="MarkAttendance" method="post" class="d-inline">
                            <input type="hidden" name="sessionId" value="@session.Id" />
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-check"></i> Mark Attendance
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="empty-state">
            <i class="fas fa-clock fa-3x mb-3"></i>
            <h5>No active sessions</h5>
            <p>Check back later for new attendance sessions.</p>
        </div>
    }
</div>
