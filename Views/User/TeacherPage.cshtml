@model RollCall.Models.User
@{
    ViewData["Title"] = "Teacher Dashboard";
}

<div class="container mt-5">
    <h2>Welcome, @Model.Name!</h2>
    <p>You are logged in as <strong>Teacher</strong>.</p>

    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Your Details</h5>
            <p><strong>Designation:</strong> @Model.Designation</p>
            <p><strong>Department:</strong> @Model.Department</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Phone:</strong> @Model.PhoneNumber</p>
        </div>
    </div>
</div>
