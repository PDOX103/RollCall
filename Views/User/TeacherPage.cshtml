@model RollCall.Models.User
@{
    ViewData["Title"] = "Teacher Dashboard";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    body, html {
        height: 100%;
        margin: 0;
        background: #0f0c29;
        background: -webkit-linear-gradient(to right, #24243e, #302b63, #0f0c29);
        background: linear-gradient(to right, #24243e, #302b63, #0f0c29);
        font-family: 'Poppins', sans-serif;
        color: #fff; /* Changed text color to white for better contrast on dark bg */
    }

    .content {
        padding: 30px;
        background: rgba(255, 255, 255, 0.1); /* Lighter, transparent background */
        border-radius: 1rem;
        margin: 20px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        backdrop-filter: blur(10px); /* Adds a glassmorphism effect */
    }

    .card {
        background: rgba(255, 255, 255, 0.95);
        color: #2c3e50; /* Dark text for card content */
    }
</style>

<div>
    <!-- Content -->
    <div class="content">
        <h2>Welcome, @Model?.Name!</h2>
        <p>This is your Teacher Dashboard. Here you can manage courses, view attendance, and more.</p>

        <!-- Course Management Cards -->
        <div class="row mt-4">
            <div class="col-md-6 mb-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-plus-circle fa-3x mb-3 text-primary"></i>
                        <h5 class="card-title">Create New Course</h5>
                        <p class="card-text">Generate a unique enrollment code for your students.</p>
                        <a asp-controller="User" asp-action="CreateCourse" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Create Course
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-book fa-3x mb-3 text-success"></i>
                        <h5 class="card-title">View My Courses</h5>
                        <p class="card-text">See all your created courses and enrollment codes.</p>
                        <a asp-controller="User" asp-action="MyCourses" class="btn btn-success">
                            <i class="fas fa-eye"></i> View Courses
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <!-- End of Course Management Cards -->

    </div>
</div>

<!-- You can remove the entire script block below if you don't need dark mode functionality -->
<script>
    // Optional: Keep this if you plan to add a dark mode toggle button elsewhere
    const modeBtn = document.querySelector(".mode-btn");
    document.addEventListener("DOMContentLoaded", () => {
        const savedMode = localStorage.getItem("darkMode");
        if (savedMode === "true") {
            document.body.classList.add("dark-mode");
            if(modeBtn) modeBtn.textContent = "☀️ Light Mode";
        } else {
            if(modeBtn) modeBtn.textContent = "🌙 Dark Mode";
        }
    });
    function toggleMode() {
        document.body.classList.toggle("dark-mode");
        const isDark = document.body.classList.contains("dark-mode");
        localStorage.setItem("darkMode", isDark);
        if(modeBtn) modeBtn.textContent = isDark ? "☀️ Light Mode" : "🌙 Dark Mode";
    }
</script>