@model RollCall.Models.User
@{
    ViewData["Title"] = "Teacher Dashboard";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    body, html {
        height: 100%;
        margin: 0;
        background: #0f0c29;
        background: -webkit-linear-gradient(to right, #24243e, #302b63, #0f0c29);
        background: linear-gradient(to right, #24243e, #302b63, #0f0c29);
        font-family: 'Poppins', sans-serif;
        color: #fff;
    }

    .content {
        padding: 30px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 1rem;
        margin: 20px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        backdrop-filter: blur(10px);
    }

    /* ===== CARD STYLES ===== */
    .course-card {
        background: rgba(255, 255, 255, 0.95);
        color: #2c3e50;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 12px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .course-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 12px;
        flex-wrap: wrap;
        gap: 6px;
    }

    .course-code {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 3px 12px;
        border-radius: 20px;
        font-weight: bold;
        font-size: 0.8em;
    }

    /* ===== ACTION BUTTONS WRAPPER ===== */
    .action-buttons {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        justify-content: center;
        margin-top: 15px;
    }

    /* ===== BUTTON STYLES ===== */
    .btn-grad, .btn-grad2, .btn-grad3, .btn-grad4 {
        border: none;
        padding: 8px 14px;
        font-size: 0.85rem;
        font-weight: 500;
        border-radius: 20px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: all 0.2s ease-in-out;
        text-decoration: none;
        white-space: nowrap;
        background-size: 200% auto;
        cursor: pointer;
        line-height: 1.2;
    }

    /* Slightly larger variant for main actions */
    .btn-grad3 {
        padding: 10px 18px;
        font-size: 1rem;
    }

    /* Black/Grey gradient */
    .btn-grad {
        background-image: linear-gradient(to right, #232526 0%, #414345 51%, #232526 100%);
        color: white;
    }

        .btn-grad:hover {
            background-position: right center;
            transform: translateY(-2px);
        }

    /* Red gradient */
    .btn-grad2 {
        background-image: linear-gradient(to right, #F00000 0%, #DC281E 51%, #F00000 100%);
        color: white;
    }

        .btn-grad2:hover {
            background-position: right center;
            transform: translateY(-2px);
        }

    /* Blue gradient */
    .btn-grad3 {
        background-image: linear-gradient(to right, #00c6ff 0%, #0072ff 51%, #00c6ff 100%);
        color: black;
    }

        .btn-grad3:hover {
            background-position: right center;
            transform: translateY(-2px);
        }

    /* Yellow/Orange gradient */
    .btn-grad4 {
        background-image: linear-gradient(to right, #ffb347 0%, #ffcc33 51%, #ffb347 100%);
        color: black;
    }

        .btn-grad4:hover {
            background-position: right center;
            transform: translateY(-2px);
        }
</style>

<div class="content">
    <h2>Welcome, @Model?.Name!</h2>
    <p>This is your Teacher Dashboard. Here you can manage courses, view attendance, and more.</p>

    <div class="row mt-4">
        <!-- Create New Course -->
        <div class="col-md-6 mb-3">
            <div class="course-card h-100 text-center">
                <div class="course-header justify-content-center">
                    <h5 class="card-title">Create New Course</h5>       
                </div>
                <i class="fas fa-plus-circle fa-3x mb-3"></i>
                <p class="card-text">Generate a unique enrollment code for your students.</p>
                <div class="action-buttons">
                    <a asp-controller="User" asp-action="CreateCourse" class="btn-grad3">
                        <i class="fas fa-plus"></i> Create Course
                    </a>
                </div>
            </div>
        </div>

        <!-- View My Courses -->
        <div class="col-md-6 mb-3">
            <div class="course-card h-100 text-center">
                <div class="course-header justify-content-center">
                    <h5 class="card-title">View My Courses</h5>                   
                </div>
                <i class="fas fa-book fa-3x mb-3"></i>
                <p class="card-text">See all your created courses and enrollment codes.</p>
                <div class="action-buttons">
                    <a asp-controller="User" asp-action="MyCourses" class="btn-grad3">
                        <i class="fas fa-eye"></i> View Courses
                    </a>
                </div>
            </div>
        </div>

        <!-- View Enrollments -->
        <div class="col-md-6 mb-3">
            <div class="course-card h-100 text-center">
                <div class="course-header justify-content-center">
                    <h5 class="card-title">View Enrollments</h5>  
                </div>
                <i class="fas fa-users fa-3x mb-3"></i>
                <p class="card-text">See which students are enrolled in your courses.</p>
                <div class="action-buttons">
                    <a asp-controller="User" asp-action="MyCourses" class="btn-grad3">
                        <i class="fas fa-eye"></i> View Enrollments
                    </a>
                </div>
            </div>
        </div>
        
    </div>
</div>

<script>
    // Optional dark mode toggle logic
    const modeBtn = document.querySelector(".mode-btn");
    document.addEventListener("DOMContentLoaded", () => {
        const savedMode = localStorage.getItem("darkMode");
        if (savedMode === "true") {
            document.body.classList.add("dark-mode");
            if(modeBtn) modeBtn.textContent = "☀️ Light Mode";
        } else {
            if(modeBtn) modeBtn.textContent = "🌙 Dark Mode";
        }
    });
    function toggleMode() {
        document.body.classList.toggle("dark-mode");
        const isDark = document.body.classList.contains("dark-mode");
        localStorage.setItem("darkMode", isDark);
        if(modeBtn) modeBtn.textContent = isDark ? "☀️ Light Mode" : "🌙 Dark Mode";
    }
</script>
